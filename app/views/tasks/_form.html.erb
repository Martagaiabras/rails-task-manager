<%= form_for @task do |f| %>
<div class="form-group">
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
	</p>
</div>

<div class="form-group">
	<p>
		<%= f.label :details %>
		<%= f.text_field :details, class: 'form-control' %>
	</p>
</div>
<p>
	<% if !@task.new_record?() %>
	<div class="form-group">
		<%= f.label "Mark as completed" %> <br />
		<%= f.check_box :completed, {}, true, false %> <br />
	</div>
	<% end %>

	<%= f.submit button_name, class: 'btn btn-primary', id: 'submit' %></p>
<% end %>