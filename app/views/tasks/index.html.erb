<h1>My Tasks</h1>
<div class="container padded">

	<% @tasks.each do |task| %>
	<h5>
		<% if task.completed? %>
		<i class="far fa-check-square"></i>
		<% else %>
		<i class="far fa-square"></i>
		<% end %>
		<%= link_to task_path(task), method: :delete, class: 'text-danger', data: { confirm: 'Are you sure?' } do %>
		<%= link_to task.title, task_path(task)%> <i class="fas fa-trash-alt"></i>
		<% end %>
	</h5>
	<% end %>
</div>		

<div class="container padded">

	<i class="far fa-plus-square", class="rose"></i> <%= link_to 'Add a new task', new_task_path%> 
</div>		
