<div class="flex" class ="padded">
	<h1><%= @task.title %></h1>
	<h1><%= link_to 'Edit Task', edit_task_path(@task) %>
		</h1>
</div>

	<div class ="containers">
		<p><strong><%= @task.details %></strong></p>

	
</div>

<p> <% if @task.completed? %>
	<i class="far fa-check-square"></i> This task is completed!
	<% else %>
	<i class="far fa-square"></i> This task is not completed!
	<% end %>
</p>

<p>
	<i class="fas fa-backward"></i><%= link_to 'Back to list', tasks_path %>
</p>
